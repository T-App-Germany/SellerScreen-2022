<Page x:Class="SellerScreen_2022.StorageEditItemAvailiblePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SellerScreen_2022"
      xmlns:ui="http://schemas.modernwpf.com/2019"
      mc:Ignorable="d" d:Background="White"
      Title="StorageEditItemAvailiblePage">

    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Column="0" Grid.Row="0" Text="{DynamicResource Current}" FontSize="20" Margin="10"/>
        <TextBlock Grid.Column="0" Grid.Row="1" Text="{DynamicResource Storage.Add}" FontSize="20" Margin="10"/>
        <TextBlock x:Name="AvailibleTxt" Grid.Column="1" Grid.Row="0" Text="0" FontSize="20" Margin="10"/>
        <ui:NumberBox x:Name="AddBox" Grid.Column="1" Grid.Row="1" MinWidth="180" Value="0" FontSize="20" VerticalAlignment="Center" SpinButtonPlacementMode="Compact" Minimum="0" ValueChanged="NumberBox_ValueChanged"/>
    </Grid>
</Page>
