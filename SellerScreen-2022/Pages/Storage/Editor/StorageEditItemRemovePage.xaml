<Page x:Class="SellerScreen_2022.StorageEditItemRemovePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SellerScreen_2022"
      xmlns:ui="http://schemas.modernwpf.com/2019"
      mc:Ignorable="d" d:Background="White"
      Title="StorageEditItemRemovePage">

    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <RadioButton x:Name="Btn1" Grid.Column="0" Grid.Row="0" FontSize="20" Margin="10" Content="{DynamicResource Storage.DisposeAll}" Checked="Btn1_Checked"/>
        <RadioButton x:Name="Btn2" Grid.Column="0" Grid.Row="1" Content="{DynamicResource Storage.DisposeNumber}" FontSize="20" Margin="10" IsChecked="True"/>
        <ui:NumberBox x:Name="RemoveBox" Grid.Column="1" Grid.Row="1" MinWidth="150" FontSize="20" VerticalAlignment="Center" SpinButtonPlacementMode="Compact" Minimum="0" Value="0" ValueChanged="NumberBox_ValueChanged"/>
    </Grid>
</Page>
