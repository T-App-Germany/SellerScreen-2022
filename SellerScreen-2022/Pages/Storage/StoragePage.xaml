<Page x:Class="SellerScreen_2022.Pages.Storage.StoragePage" x:Name="Page"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SellerScreen_2022.Pages.Storage"
      xmlns:ui="http://schemas.modernwpf.com/2019"
      mc:Ignorable="d" 
      d:Background="White"
      Title="Lager" Loaded="Page_Loaded">

    <Viewbox MaxWidth="1000">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition x:Name="StorageItemsRow" Height="Auto"/>
            </Grid.RowDefinitions>
            <TextBlock x:Name="HeaderTxt" Grid.Row="0" Text="{Binding Title, ElementName=Page}" Style="{StaticResource HeaderTextBlockStyle}" Margin="20"/>
            <ui:CommandBar x:Name="CmdBar" Grid.Row="1" Margin="20,10" HorizontalAlignment="Left">
                <ui:AppBarButton Icon="Add" Label="Hinzufügen"/>
                <ui:AppBarButton Icon="Remove" Label="Entfernen"/>
                <ui:AppBarSeparator/>
                <ui:AppBarButton Icon="Accept" Label="Aktivieren"/>
                <ui:AppBarButton Icon="Cancel" Label="Deaktivieren"/>
            </ui:CommandBar>
            <Grid Grid.Row="2" Margin="20,20,20,10">
                <Grid x:Name="ColumnHeaderGrid">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <CheckBox x:Name="StorageHeaderSelectTxt" Grid.Column="0" FontSize="20" FontWeight="DemiBold" MinWidth="34" Margin="10,0,0,0"/>
                    <TextBlock x:Name="StorageHeaderIdTxt" Grid.Column="1" Text="ID" FontSize="20" FontWeight="DemiBold" TextAlignment="Center" MinWidth="42"/>
                    <TextBlock x:Name="StorageHeaderStatusTxt" Grid.Column="2" Text="Status" FontSize="20" FontWeight="DemiBold" TextAlignment="Center" MinWidth="76"/>
                    <TextBlock x:Name="StorageHeaderNameTxt" Grid.Column="3" Text="Bezeichnung" FontSize="20" FontWeight="DemiBold" TextAlignment="Center" MinWidth="132"/>
                    <TextBlock x:Name="StorageHeaderAvailibleTxt" Grid.Column="4" Text="Verfügbar" FontSize="20" FontWeight="DemiBold" TextAlignment="Center" MinWidth="112"/>
                    <TextBlock x:Name="StorageHeaderPriceTxt" Grid.Column="5" Text="Preis" FontSize="20" FontWeight="DemiBold" TextAlignment="Center" MinWidth="90"/>
                </Grid>
            </Grid>
            <ScrollViewer x:Name="StorageItemView" Grid.Row="3" Margin="20,0" HorizontalAlignment="Left">
                <StackPanel Margin="0,0,10,0">
                    <Separator/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" MinWidth="{Binding MinWidth, ElementName=StorageHeaderSelectTxt}"/>
                            <ColumnDefinition Width="Auto" MinWidth="{Binding MinWidth, ElementName=StorageHeaderIdTxt}"/>
                            <ColumnDefinition Width="Auto" MinWidth="{Binding MinWidth, ElementName=StorageHeaderStatusTxt}"/>
                            <ColumnDefinition Width="Auto" MinWidth="{Binding MinWidth, ElementName=StorageHeaderNameTxt}"/>
                            <ColumnDefinition Width="Auto" MinWidth="{Binding MinWidth, ElementName=StorageHeaderAvailibleTxt}"/>
                            <ColumnDefinition Width="Auto" MinWidth="{Binding MinWidth, ElementName=StorageHeaderPriceTxt}"/>
                        </Grid.ColumnDefinitions>

                        <CheckBox Grid.Column="0" MinWidth="0" Margin="10"/>
                        <TextBlock Grid.Column="1" Text="0" FontSize="20" Margin="10" TextAlignment="Center"/>
                        <ui:FontIcon Grid.Column="2" Glyph="&#xe73e;" Margin="10" Foreground="LightGreen" ToolTip="Bereit"/>
                        <TextBlock Grid.Column="3" Text="Name" FontSize="20" Margin="10"/>
                        <TextBlock Grid.Column="4" Text="00" FontSize="20" Margin="10" TextAlignment="Center"/>
                        <TextBlock Grid.Column="5" Text="00,00€" FontSize="20" Margin="10" TextAlignment="Center"/>
                    </Grid>
                    <Separator/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" MinWidth="{Binding MinWidth, ElementName=StorageHeaderSelectTxt}"/>
                            <ColumnDefinition Width="Auto" MinWidth="{Binding MinWidth, ElementName=StorageHeaderIdTxt}"/>
                            <ColumnDefinition Width="Auto" MinWidth="{Binding MinWidth, ElementName=StorageHeaderStatusTxt}"/>
                            <ColumnDefinition Width="Auto" MinWidth="{Binding MinWidth, ElementName=StorageHeaderNameTxt}"/>
                            <ColumnDefinition Width="Auto" MinWidth="{Binding MinWidth, ElementName=StorageHeaderAvailibleTxt}"/>
                            <ColumnDefinition Width="Auto" MinWidth="{Binding MinWidth, ElementName=StorageHeaderPriceTxt}"/>
                        </Grid.ColumnDefinitions>

                        <CheckBox Grid.Column="0" MinWidth="0" Margin="10"/>
                        <TextBlock Grid.Column="1" Text="0" FontSize="20" Margin="10" TextAlignment="Center"/>
                        <ui:FontIcon Grid.Column="2" Glyph="&#xe7ba;" Margin="10" Foreground="Orange" ToolTip="Warnung"/>
                        <TextBlock Grid.Column="3" Text="Name" FontSize="20" Margin="10"/>
                        <TextBlock Grid.Column="4" Text="00" FontSize="20" Margin="10" TextAlignment="Center"/>
                        <TextBlock Grid.Column="5" Text="00,00€" FontSize="20" Margin="10" TextAlignment="Center"/>
                    </Grid>
                    <Separator/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" MinWidth="{Binding MinWidth, ElementName=StorageHeaderSelectTxt}"/>
                            <ColumnDefinition Width="Auto" MinWidth="{Binding MinWidth, ElementName=StorageHeaderIdTxt}"/>
                            <ColumnDefinition Width="Auto" MinWidth="{Binding MinWidth, ElementName=StorageHeaderStatusTxt}"/>
                            <ColumnDefinition Width="Auto" MinWidth="{Binding MinWidth, ElementName=StorageHeaderNameTxt}"/>
                            <ColumnDefinition Width="Auto" MinWidth="{Binding MinWidth, ElementName=StorageHeaderAvailibleTxt}"/>
                            <ColumnDefinition Width="Auto" MinWidth="{Binding MinWidth, ElementName=StorageHeaderPriceTxt}"/>
                        </Grid.ColumnDefinitions>

                        <CheckBox Grid.Column="0" MinWidth="0" Margin="10"/>
                        <TextBlock Grid.Column="1" Text="0" FontSize="20" Margin="10" TextAlignment="Center"/>
                        <ui:FontIcon Grid.Column="2" Glyph="&#xf78a;" Margin="10" Foreground="Red" ToolTip="Fehler"/>
                        <TextBlock Grid.Column="3" Text="Name" FontSize="20" Margin="10"/>
                        <TextBlock Grid.Column="4" Text="00" FontSize="20" Margin="10" TextAlignment="Center"/>
                        <TextBlock Grid.Column="5" Text="00,00€" FontSize="20" Margin="10" TextAlignment="Center"/>
                    </Grid>
                    <Separator/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" MinWidth="{Binding MinWidth, ElementName=StorageHeaderSelectTxt}"/>
                            <ColumnDefinition Width="Auto" MinWidth="{Binding MinWidth, ElementName=StorageHeaderIdTxt}"/>
                            <ColumnDefinition Width="Auto" MinWidth="{Binding MinWidth, ElementName=StorageHeaderStatusTxt}"/>
                            <ColumnDefinition Width="Auto" MinWidth="{Binding MinWidth, ElementName=StorageHeaderNameTxt}"/>
                            <ColumnDefinition Width="Auto" MinWidth="{Binding MinWidth, ElementName=StorageHeaderAvailibleTxt}"/>
                            <ColumnDefinition Width="Auto" MinWidth="{Binding MinWidth, ElementName=StorageHeaderPriceTxt}"/>
                        </Grid.ColumnDefinitions>

                        <CheckBox Grid.Column="0" MinWidth="0" Margin="10"/>
                        <TextBlock Grid.Column="1" Text="0" FontSize="20" Margin="10" TextAlignment="Center"/>
                        <ui:FontIcon Grid.Column="2" Glyph="&#xe7e8;" Margin="10" Foreground="Gray" ToolTip="Deaktiviert"/>
                        <TextBlock Grid.Column="3" Text="Name" FontSize="20" Margin="10"/>
                        <TextBlock Grid.Column="4" Text="00" FontSize="20" Margin="10" TextAlignment="Center"/>
                        <TextBlock Grid.Column="5" Text="00,00€" FontSize="20" Margin="10" TextAlignment="Center"/>
                    </Grid>
                </StackPanel>
            </ScrollViewer>
            <Grid Grid.Column="1" Grid.Row="3" Margin="0,0,20,20">
                <ui:ThemeShadowChrome Grid.Column="0" Grid.ColumnSpan="2" Depth="80" IsShadowEnabled="{DynamicResource {x:Static SystemParameters.DropShadowKey}}"/>
                <Border Background="{DynamicResource RegionBrush}" CornerRadius="2 0 0 2"/>
                <Border Grid.Column="0" Background="{DynamicResource SystemAltMediumHighColorBrush}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <TextBlock Text="Name" Style="{StaticResource SubtitleTextBlockStyle}" Margin="10" TextTrimming="CharacterEllipsis" FontWeight="DemiBold"/>
                        <Grid Grid.Row="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <TextBlock Grid.Row="1" Text="ID:" Margin="10,5" FontSize="20"/>
                            <TextBlock Grid.Column="1" Grid.Row="1" Text="00" Margin="10,5" FontSize="20"/>
                            <TextBlock Grid.Row="2" Text="Status:" Margin="10,5" FontSize="20"/>
                            <TextBlock Grid.Column="1" Grid.Row="2" Text="Deaktiviert" Margin="10,5" FontSize="20"/>
                            <TextBlock Grid.Row="3" Text="Verfügbar:" Margin="10,5" FontSize="20"/>
                            <TextBlock Grid.Column="1" Grid.Row="3" Text="00" Margin="10,5" FontSize="20"/>
                            <TextBlock Grid.Row="4" Text="Preis:" Margin="10,5" FontSize="20"/>
                            <TextBlock Grid.Column="1" Grid.Row="4" Text="00,00€" Margin="10,5" FontSize="20"/>
                        </Grid>
                    </Grid>
                </Border>
            </Grid>
        </Grid>
    </Viewbox>
</Page>